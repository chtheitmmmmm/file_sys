#: import EncryptSetting  components.EncryptSetting
#: import SuperButton  components.SuperButton

<EncryptSetting>:
    size_hint: 0.5, 0.5
    BoxLayout:
        canvas.before:
            Color:
                rgba: 200 / 255, 200 / 255, 200 / 255, 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: "vertical"
        RelativeLayout:
            size_hint_y: 0.7
            RelativeLayout:
                size_hint: 0.6, 0.8
                pos_hint: {"x": 0.2, "y": 0.1}
                GridLayout:
                    cols: 2
                    RelativeLayout:
                        BoxLayout:
                            size_hint: 0.8, 1
                            pos_hint: {"x": 0.1}
                            CheckBox:
                                group: root.group
                            Label:
                                text: "MD5"
                                color: "black"
                    RelativeLayout:
                        BoxLayout:
                            size_hint: 0.8, 1
                            pos_hint: { "x": 0.1 }
                            CheckBox:
                                group: root.group
                            Label:
                                text: "DES"
                                color: "black"
                    RelativeLayout:
                        BoxLayout:
                            size_hint: 0.8, 1
                            pos_hint: { "x": 0.1 }
                            CheckBox:
                                group: root.group
                            Label:
                                text: "IDEA"
                                color: "black"
                    RelativeLayout:
                        BoxLayout:
                            size_hint: 0.8, 1
                            pos_hint: { "x": 0.1 }
                            CheckBox:
                                group: root.group
                            Label:
                                text: "RSA"
                                color: "black"
                    RelativeLayout:
                        BoxLayout:
                            size_hint: 0.8, 1
                            pos_hint: { "x": 0.1 }
                            CheckBox:
                                group: root.group
                            Label:
                                text: "自定义"
                                color: "black"

        RelativeLayout:
            size_hint_y: 0.3
            BoxLayout:
                size_hint: 0.7, 1 / 3
                pos_hint: { "x": 0.15, "y": 1 / 3 }
                SuperButton:
                    text: "确定"
                    color: "white"
                    press_color: 0 / 255, 80 / 255, 200 / 255, 1
                    plain_color: 0 / 255, 111 / 255, 225 / 255, 1
                    on_release: root.dispatch("on_confirm")
                SuperButton:
                    text: "取消"
                    color: "white"
                    plain_color: 0.7, 0.7, 0.7, 1
                    press_color: 0.9, 0.9, 0.9, 1
                    on_release: root.dispatch("on_cancel")