#: import Errtoast  components.ErrToast
#: include  components/toast/toast.kv

<ErrToast>:
    RelativeLayout:
        RelativeLayout:
            canvas.before:
                Color:
                    rgba: 28 / 255, 28 / 255, 28 / 255, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                size_hint: 0.6, 0.6
                pos_hint: {"x": 0.2, "y": 0.2}
                orientation: "vertical"
                Image:
                    source: "resource/graphics/error.png"
                    size_hint_y: 0.8
                    texture_size: 300, 300
                Label:
                    color: "white"
                    text: root.msg
                    size_hint_y: 0.2
